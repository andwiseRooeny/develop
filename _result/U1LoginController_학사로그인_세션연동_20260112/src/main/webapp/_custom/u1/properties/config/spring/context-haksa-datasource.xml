<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- 학사 DB 환경설정에 의해 DataSource를 생성하는 팩토리 (CMS 전용 팩토리 사용) -->
	<bean id="haksaDataSourceFactory" class="com.andwise.jw.cms.datasource.JiniworksDataSourceFactory" >
		<property name="alias" value="HAKSA" />
	</bean>

	<!-- 학사 데이터소스 어댑터 (CMS 전용 DataSource 사용) -->
	<bean id="haksaDataSource-${Globals.DbType}" class="com.andwise.jw.cms.datasource.DataSource" >
		<property name="dataSourceFactory" ref="haksaDataSourceFactory"/>
	</bean>

    <alias name="haksaDataSource-${Globals.DbType}" alias="haksa.dataSource" />

</beans>
